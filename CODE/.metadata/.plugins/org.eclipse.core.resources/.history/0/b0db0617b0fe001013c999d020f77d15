package DSA;

public class Solution1 {
    public static int[] twoSum(int[] nums, int target) {
		int res[] = {-1,-1};
		int i = 0;
		int j = nums.length-1;
		
		while(i<=j) {
			if((nums[i] + nums[j]) == target) {
				res[0] = i;
				res[1] = j;
				return res;
			}
			else if((nums[i] + nums[j]) > target) {
				j--;
			}
			else {
				i++;
			}	
		} 	
    	return res;
    }
    public static void main(String[] args) {
    	
    }
}